@model IEnumerable<AuthAuz.Models.ProductA>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="responsive-table" id="productTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Image
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" height="70" width="60" />
            </td>
            <td>
                <a class="waves-effect waves-light btn" onclick="Edit('@Url.Action("AddOrEdit", "Ajax", new { id=@item.ProductID})')"><i class="fa fa-pencil fa-lg"></i></a>
                <a class="waves-effect waves-light btn" onclick="Delete('@Url.Action("Delete", "Ajax", new { id=@item.ProductID})')"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>




