<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/css/materialize.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <nav>
            <div class="nav-wrapper" style="background-color: #00b8d4">
                <a href="#!" class="brand-logo center">Sales Management</a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        @Html.ActionLink("ProductVM", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Ajax Crud", "Index", "Ajax", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Multi Submit", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Multi Orders", "Index", "Sales", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                </ul>
                <ul class="center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Assign Role", "CreateRole", "Admin")</li>
                            <li>@Html.ActionLink("Mange Role", "Index", "Admin")</li>
                        }
                        <li>@Html.ActionLink("Hello, " + User.Identity.Name, "")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="page-footer" style=" background-color: #00b8d4">
        <div class="footer-copyright right-align">
            <div class="container">
                © 2020 Copyright ~A.R KHAN~
            </div>
        </div>
</footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script src="~/Content/js/materialize.js"></script>
    <script src="~/Content/js/materialize.min.js"></script>
</body>
</html>
<script>
 $(document).ready(function(){
    $('.sidenav').sidenav();
  });
</script>